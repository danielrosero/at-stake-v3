<div class="siteLanding" id="homepage">
  <div class="row top">
    {{!-- TOP SECTION/LANDING --}}
    <div class="top-section">
      <div class="landing-header">
        <span class="whats">what's</span></br><span class="at-sign">@</span><span class="header-stake">stake?</span>
      </div>
      <div class="play-button"></div>
    </div>
  </div>
  
  {{!-- GAME PITCH --}}
  <div class="row pitch">
  <div class="phone-pic col-lg-4 col-sm-12"><img class="showcaseImage" src="{{{cloudinaryUrl content.showcaseImage width=auto height=350 crop='scale' quality=100}}}"></div>
    <div class="game-pitch col-lg-8 col-sm-10">
      <div class="half-1 col-lg-10 col-sm-12 col-centered">
        <h4 class="tagline">{{{content.tagline.html}}}</h4>
        <div class="cta-para-one">{{{content.ctaParagraphOne.html}}}</div>
        <div class="cta-para-two">{{{content.ctaParagraphTwo.html}}}</div>
          <ul class="cta-points">
            <li><strong>{{{content.pointOneText.html}}}</strong></li>
            <li><strong>{{{content.pointTwoText.html}}}</strong></li>
            <li><strong>{{{content.pointThreeText.html}}}</strong></li>
          </ul>
      </div>
    </div>
  </div>

  {{!-- FEATURES --}}
  <div class="row feature col-lg-9 col-sm-9 col-centered">
    <div class="game-features">
      <div class="feature-one col-sm-4">
      	<div class="feature-image feature-one-image"><img src="{{{cloudinaryUrl content.featureOneIcon width=auto height=100 crop='scale' quality=100}}}"></div>
        <div class="feature-header-one"><h3>{{{content.featureOneTitle.html}}}</h3></div>
      	<div class="feature-text feature-one-text">{{{content.featureOneParagraph.html}}}</div>
      </div>
      <div class="feature-two col-sm-4">
      	<div class="feature-image feature-two-image"><img src="{{{cloudinaryUrl content.featureTwoIcon width=auto height=100 crop='scale' quality=100}}}"></div>
        <div class="feature-header-two"><h3>{{{content.featureTwoTitle.html}}}</h3></div>
      	<div class="feature-text feature-two-text">{{{content.featureTwoParagraph.html}}}</div>
      </div>
      <div class="feature-three col-sm-4">
        <div class="feature-image feature-three-image"><img src="{{{cloudinaryUrl content.featureThreeIcon width=auto height=100 crop='scale' quality=100}}}"></div>
        <div class="feature-header-three"><h3>{{{content.featureThreeTitle.html}}}</h3></div>  
      	<div class="feature-text feature-three-text">{{{content.featureThreeParagraph.html}}}</div>
      </div>
    </div>
  </div>

  {{!-- FLOW OF PLAY --}}
  <div class="row flow-play col-lg-10 col-sm-10 col-centered">
    <div class="game-flow">
      <h3 class="flow-play-header">{{{content.flowOfGameHeader.html}}}</h3>
    	<div class="flow-play-para">{{{content.flowOfGameParagraph.html}}}</div>
    	<div class="flow-play-pic"><img src="{{{cloudinaryUrl content.flowOfGamePicture width=auto height=100 crop='scale' quality=100}}}"></div>
    </div>
  </div>

    {{!-- LEARN MORE --}}
  <div class="row learn-more col-lg-8 col-sm-10 col-centered">
    <div class="game-learn">
    	<h3 class="learn-more-header">{{{content.learnMoreHeader.html}}}</h3>
    	<div class="learn-more-para">{{{content.learnMoreParagraph.html}}}</div>
    </div>
  </div>

  {{!-- CREDITS --}}
  <div class="credits row">
  	<div class="design-dev-team col-lg-12 col-sm-12 col-centered">
	    <h3>Design and Development Team</h3>
	    <div class="team row pi"><h5 class="team-title">Principal Investigator </h5>{{content.principalInvestigator.name}}</div>
      <div class="row" style="padding:0px">
        <div class="team-1-half col-sm-6">
    	    <div class="team row"><h5 class="team-title">Product Manager </h5>{{content.productManager.name}}</div>
    	    <div class="team row"><h5 class="team-title">Lead Developer </h5>{{content.leadDeveloper.name}}</div>
          <div class="team row"><h5 class="team-title">Game Designer </h5>{{content.otherGameDesigner.name}}, {{content.gameDesigner.name}}</div>
          <div class="team row"><h5 class="team-title">Production Assistant </h5>{{content.productionAssistant.name}}</div>
        </div>
        <div class="team-2-half col-sm-6">
          <div class="team row"><h5 class="team-title">Project Manager </h5>{{content.projectManager.name}}</div>
          <div class="team row"><h5 class="team-title">Art Director </h5>{{content.artDirector.name}}</div>
    	    <div class="team row"><h5 class="team-title">Junior Developer </h5>{{content.juniorDeveloper.name}}</div>
    	    <div class="team row"><h5 class="team-title">Production Assistant </h5>{{content.otherProductionAssistant.name}}</div>
        </div>
      </div>
    </div>
    <div class="el-logo">
    </div>
  </div>