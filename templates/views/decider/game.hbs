<div id="login" class="col-sm-12">

<img src="http://res.cloudinary.com/engagement-lab-home/image/upload/e_grayscale/v1454520474/site/listings/odr1jt3rfkda0s1qce9q.png" height='auto' width='200px'>
  <p style="width:20%; margin-left:40%;">Welcome to At Stake: a deliberation game! You will need 3-4 players.</p>

  <div class="col-sm-3"></div>
  <div class="submission col-sm-6">
      <div class="form">
          <div class="form-prompt white">enter username:</div>
          <input type="text" id="player-name" placeholder="name"> <br/>
          
          <div class="error">Error!</div>
          <input id="btn_submit_username" class="button_text" type="submit" name="submit" value="Login">       
      </div>
  </div>

</div>

<div class="row" id="waiting" style="display:none">
	<h1 id="game-code">{{game.accessCode}}</h1>
	<h2>You are the decider</h2>
	<h3>Waiting for players</h3>


	<div class="col-sm-3"></div>
	<div class="row col-sm-9" id="players">

	</div>
	<div class="col-sm-3"></div>

	<div class="form row {{!-- hidden-el --}}" id="start">
    <input id="btn-start-game" data-event="game:start" class="post-button submit" type="submit" name="submit" value="start">
	</div>
</div>