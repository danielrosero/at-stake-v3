function playerEntry() {

	var animTiming = [.5, .6, .7, .8];
	var entryButtons = $('.gameLanding a');
	
  _.each(entryButtons, function(el, index) {

		timeline.add(TweenMax.fromTo(el, animTiming[index], {scale:0}, {scale:1, ease:Elastic.easeOut}));

  });
  {{!-- console.log ("animating players entering"); --}}
  timeline.play();

}

function rulesAnim() {

	var screens = $('.row.screen');
  var screensAnim = new TimelineLite({paused: true});
	
  _.each(screens, function(el, index) {

		// timeline.add(TweenLite.fromTo(el, animTiming[index], {scale:0}, {scale:1, ease:Elastic.easeOut}));

		screensAnim.to(el, .5, {xPercent:-100, ease:Expo.easeInOut, opacity: 1, display:'block', delay: 3});
		screensAnim.fromTo(el, .5, {xPercent:100}, {x:0, xPercent:0, ease:Expo.easeInOut, opacity:0, display:'none', delay: 3});

  });

  screensAnim.play();
	
}