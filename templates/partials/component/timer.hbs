{{#if button}}

  {{!-- BUTTON TO START --}}
  <div class="form row">
    <button data-event="game:start_timer" class="timer-button next-step submit">start</button>
  </div>

  {{!-- <div class="timer button" style="cursor:pointer" onclick="startTimer();"></div> --}}

{{else}}

  {{!-- CIRCULAR TIMER --}}
  <div class="timer"></div>
  <div class="form row">
    <button id="btn-next" data-event="game:next_screen" class="timer-button next-step submit" style="display:none">next</button>
    <span id="modifier" class="hidden-el" data-hide_next="false"></span>
  </div>

{{/if}}