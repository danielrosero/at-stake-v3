<section class="col-lg-6 col-sm-6">
  <div class="row room-container">
		<h4><em>{{question}}</em></h4>

		Press 'deliberate' to start the timer. Be sure to ask probing questions about the proposal and encourage questions among players.

	</div>
	<div class="form row {{!-- hidden-el --}}" id="decider">
    <input id="btn-time" data-event="game:start_timer" class="post-button submit" type="submit" name="submit" value="start ({{config.pitchSeconds}} seconds)">
    <input id="btn-next" data-event="game:next_player" class="post-button submit" type="submit" name="submit" value="next player" style="display:none">
    Time left: <span id="countdown"></span>
	</div>
</section>