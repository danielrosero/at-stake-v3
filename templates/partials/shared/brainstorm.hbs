{{!-- BRAINSTORM PHASE UI --}}
<div id="brainstorm">

	<div class="screen initial">

		{{> component/instructions 
				decider=true
				heading="Read the text in the blue box out loud"
				body="Once you finish speaking the instructions to other players, press next to continue."
		}}

		{{> component/instructions 
				heading="Get ready to think of a proposal"
				body="Remember to think from your stakeholder's perspective and include your agenda items!"
		}}

		{{> component/speech 
				decider=true
				body=(combine 'In this phase, you will have ' config.thinkSeconds ' seconds to think of a proposal that addresses this question: ' question)
		}}

		{{> component/speech 
				body=(combine 'In this phase, you will have ' config.thinkSeconds ' seconds to think of a proposal that addresses this question: ' question)
		}}

	</div>

	<div class="screen">

		{{> component/instructions 
				decider=true
				heading="Read the text in the blue box out loud"
				body="Once you finish speaking the instructions to other players, press next to continue."
		}}

		{{> component/instructions 
				heading="Get ready to think of a proposal"
				body="Remember you can open and close your role card at anytime during the game!"
		}}

		{{> component/speech 
				decider=true
				body=(combine 'Once I start the timer, you will have ' config.thinkSeconds ' seconds to think of a proposal that addresses this question. Remember to think from your character\'s perspective!')
		}}

		{{> component/speech 
				body=(combine 'Once I start the timer, you will have ' config.thinkSeconds ' seconds to think of a proposal that addresses this question. Remember to think from your character\'s perspective!')
		}}

	</div>

	{{!-- TIMER START --}}
	<div class="screen">

		{{> component/instructions 
				decider=true
				heading="Press the button to start the timer"
				body="When everyone is ready and understands the instructions, press the button to start the timer."
		}}
		
		{{> component/instructions 
				heading="Get ready to think of a proposal"
				body="Remember to incorporate your hidden agenda items and embody your stakeholder role!"
		}}

		{{!-- Timer in button mode  --}}
		{{> component/timer 
				decider=true				
				preview=true
				time=config.thinkSeconds
				body="Press the red button to start!"
		}}

		{{> component/timer				
				preview=true
				time=config.thinkSeconds
				body=question
		}}
	</div>

	{{!-- COUNTDOWN --}}
	<div class="screen">

		{{> component/instructions 
				decider=true
				heading="Wait for the timer to reach zero"
				body='When the timer reaches zero announce "Times Up!" The screen will advance autmatically.'
		}}
		
		{{> component/instructions 
				heading="Think of a proposal!"
				body="Remember to incorporate your hidden agenda items and embody your stakeholder role!"
		}}
 
		{{> component/timer 
				time=config.thinkSeconds
				decider=true
				body=question
		}}
		
		{{> component/timer 
				time=config.thinkSeconds
				body=question
		}}
	
	</div>

	{{!-- END --}}
	<div class="screen">

		{{> component/instructions 
				decider=true
				heading="Read the text in the blue box out loud"
				body="Once you have finished speaking the instruction, press next to continue."
		}}
		
		{{> component/instructions 
				heading="Get ready to pitch your proposal"
				body=(combine 'In the next phase everyone will have ' config.pitchSeconds ' to pitch their proposal.')
		}}

		{{> component/speech 
				decider=true
				advance=true
				body="Get ready to propose your solutions in the Pitch phase!"
		}}

		{{> component/speech 
				body="Get ready to propose your solutions in the Pitch phase!"
		}}
	
	</div>

</div>