{{!-- MEET PHASE UI --}}
<div id="meet">

	{{!-- RULES - First Round Only and if Tutorial enabled --}}
	{{#if tutorial}}
		{{> shared/rules }}
	{{/if}}

	{{!-- ROLE CARDS --}}
	<div class="screen {{#unless tutorial}}initial{{/unless}}">

		{{> component/instructions 
				decider=true
				heading="Read the text in the blue box out loud"
				body="Once you finish speaking the instructions to other players, press next to continue"
		}}

		{{> component/instructions 
				heading="Open your Role Card and review your role"
				body="Press the Role Card buton on the bottom of the screen to review your title and bio."
		}}

		{{> component/speech 
				decider=true
				body="Everyone open your role card using the button at the bottom of your screen and review your character role. You will be playing from this character's perspective this round."
		}}

		{{> component/speech 
				body="Everyone open your role card using the button at the bottom of your screen and review your character role. You will be playing from this character's perspective this round."
		}}

	</div>

	{{!-- READ ROLES (each player) --}}
	{{#each players}}
		{{#ifnoteq decider true}}
		<div class="screen">
			
			{{> component/instructions 
					decider=true
					heading="Read the text in the blue box out loud"
					body=(combine 'Once ' username ' has introduced themselves, press next to continue')
			}}

			{{> component/instructions 
					heading="Open your Role Card and prepare to share"
					body="On your turn, read your character role title and bio outloud to the group."
			}}

			{{> component/speech 
					decider=true
					body=(combine username ', introduce yourself by reading your character role title and short bio. Do not read your hidden agenda items outloud!')
			}}

			{{> component/speech 
					body=(combine username ', introduce yourself by reading your character role title and short bio. Do not read your hidden agenda items outloud!')
			}}

		</div>
		{{/ifnoteq}}
	{{/each}}

	{{!-- AGENDA ITEMS --}}
	<div class="screen">
		
		{{> component/instructions 
				decider=true
				heading="Read the text in the blue box out loud"
				body="Once everyone has had enough time to review their hidden agenda items, press next to continue."
		}}

		{{> component/instructions 
				heading="Review your Hidden Agenda items"
				body="At the bottom of your role card are your hidden agenda items. Secretly review them now."
		}}

		{{> component/speech 
				decider=true
				advance=true
				body="Now everyone quietly review your hidden agenda items at the bottom of your role card. You’ll earn coins if they are included in the winning proposal. Keep them secret!"
		}}

		{{> component/speech 
				body="Now everyone quietly review your hidden agenda items at the bottom of your role card. You’ll earn coins if they are included in the winning proposal. Keep them secret!"
		}}

	</div>

</div>