<!DOCTYPE html>
<!--[if IE 9]> <html lang="en" class="ie9"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en">
    <!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <title>@Stake</title>
        <meta name="description" content="@Stake is an online and mobile role-playing game that fosters democracy, empathy, and creative problem solving for civic issues.">
        <meta name="author" content="Engagement Lab at Emerson College">
        <meta name="viewport" content="width=device-width">
        
        {{#ifeq section 'play'}}
            {{!-- Mobile Meta --}}
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <meta name="theme-color" content="#FFAB43">
        {{/ifeq}}

        {{!-- Open Graph --}}
        {{!-- <meta property="og:image" content="http://res.cloudinary.com/engagement-lab-home/image/upload/v1455896685/site/about/logo_color.png" /> --}}

        {{!-- Load web SDK's core script/docs --}}
        {{> core environment=env}}

        {{!-- Load our CSS/docs --}}
        {{> css environment=env section=section}}
    </head>
    
    <body class="body{{#if mobile}} mobile{{/if}}">
        {{#ifeq section "comingsoon"}}
            {{> nav_comingsoon}}
            <div class="col-sm-12">
        {{else}}
        
            {{#ifeq section "index"}}
                {{> nav}}
                <div class="container">
            {{/ifeq}}
            
        {{/ifeq}}

        <div id="wrapper">

            <div id="overlay" class="modal">
            </div>

            {{!-- STAGES BAR --}}
            <section class="col-sm-12" id="stages-bar">
                    <span id="progress"></span>

                    <img src="/images/layout/stageicons/meet.svg" class="disabled" />
                    <img src="/images/layout/stageicons/brainstorm.svg" class="disabled" />
                    <img src="/images/layout/stageicons/pitch.svg" class="disabled" />
                    <img src="/images/layout/stageicons/deliberate.svg" class="disabled" />
                    <img src="/images/layout/stageicons/grandstand.svg" class="disabled" />
                    <img src="/images/layout/stageicons/decide.svg" class="disabled" />
                    <img src="/images/layout/stageicons/score.svg" class="disabled" />
            </section>

            {{!-- ROLE CARD OVERLAY --}}
            <section class="col-sm-12" id="role-card">

            </section>

            {{#ifeq debug true}}
                {{!-- DEBUGGING --}}
                <div id="debugging" class="form" style="position: fixed;top: 0;">
                    
                    <div id="debug-info">
                    </div>

                    <div id="decider-debugging">

                        <br /><button id="countdowns_pause" data-resume="false" class="submit">pause countdowns</button>
                        <br /><button id="goto_results" data-event="game:force_results" class="submit"{{!--  style="display:none" --}}>show results</button>

                        <div id="slider-gsap">
                        </div>

                        <select id="template_selector" name="template_selector_player">
                          <option value="">choose:</option>

                                {{#each gameScreens}}
                                  <option value="{{this}}">{{this}}</option>
                                {{/each}}
                        </select>

                    </div>

                  <button id="generate_players">generate players</button>
                </div>

            {{/ifeq}}

            {{#ifnoteq section 'homepage'}}

                <div class="col-sm-12 col-lg-12" id="gameContent">

                    {{!-- <section id="logo-bar" style="display:none">
                        <img src="http://res.cloudinary.com/engagement-lab-home/image/upload/e_grayscale/v1454520474/site/listings/odr1jt3rfkda0s1qce9q.png">
                    </section> --}}

                    {{> shared/resuming }}

                    <!-- BODY CONTENT START -->
                    {{{body}}}

                </div>

            {{else}}

                <div class="col-sm-12 col-lg-12" id="homeContent">

                    <!-- BODY CONTENT START -->
                    {{{body}}}

                </div>

            {{/ifnoteq}}

                <footer id="bottom-bar" style="display:none">
                
                    <div class="col-sm-6 col-xs-6">
                        <button id="btn-role-card">role card</button>
                        <button id="btn-menu">menu</button>
                    </div>
                    <div id="currency" class="col-sm-6 col-xs-6">
                        <div id="pot-coins"><p>coin pot</p><img src="https://res.cloudinary.com/engagement-lab-home/image/upload/v1486743650/at-stake/pot_stroke.png" > <span></span></div>
                        <div id="player-coins"><p>your coins</p><img src="https://res.cloudinary.com/engagement-lab-home/image/upload/v1486743650/at-stake/coin_stroke.png" > <span></span></div>
                    </div>
                    
                </footer>

                {{#ifeq debug true}}
                    {{#ifnoteq viewType 'decider'}}
                      <div id="emulate-players" style="display:none">
                        <iframe src="" data-emulated='true' width="400" height="400"></iframe>
                        <iframe src="" data-emulated='true' width="400" height="400"></iframe>
                        <iframe src="" data-emulated='true' width="400" height="400"></iframe>
                        <iframe src="" data-emulated='true' width="400" height="400"></iframe>
                        <iframe src="" data-emulated='true' width="400" height="400"></iframe>
                        <iframe src="" data-emulated='true' width="400" height="400"></iframe>
                        <iframe src="" data-emulated='true' width="400" height="400"></iframe>
                        <iframe src="" data-emulated='true' width="400" height="400"></iframe>
                      </div>
                  {{/ifnoteq}}
                {{/ifeq}}
            </div><!-- /.container -->

            <!-- page-wrapper end -->
            {{#ifeq env "development"}}
                {{> script/development host=socketHost environment=env section=section subSection=sub_section}}
            {{else}}
                {{> script/production host=socketHost environment=env section=section}}
            {{/ifeq}}

        </div>

    </body>
</html>
